<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="5dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.neurotec.nlv.nlv_app.NLVdemo">

    <com.faceidnative.faceidapplication.gui.NFaceVerificationClientView
        android:id="@+id/nFaceView"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="5"
        android:visibility="gone"></com.faceidnative.faceidapplication.gui.NFaceVerificationClientView>

    <LinearLayout
        android:id="@+id/nFaceIcon"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="5"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="10dp">
        <ImageButton
            android:id="@+id/button_enroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eee"
            android:src="@drawable/ic_camera_black_24dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/other_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="10dp">

        <ImageButton
            android:id="@+id/button_force"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#eee"
            android:gravity="center"
            android:src="@drawable/ic_refresh_black_24dp" />

        <ImageButton

            android:id="@+id/button_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="#eee"
            android:gravity="center"
            android:src="@drawable/ic_close_black_24dp" />
    </LinearLayout>

</LinearLayout>
